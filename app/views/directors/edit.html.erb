<h1>Editing Director #<%= @director.id %></h1>

<% if @director.errors.any? %>
  <ul>
    <% @director.errors.full_messages.each do |msg| %>
      <li><%= msg %></li>
    <% end %>
  </ul>
<% end %>

<%= form_tag(director_url(@director), method: 'put') do %>

  <div>
    <%= label_tag :name %><br />
    <%= text_field_tag :name, @director.name %>
  </div>


  <div>
    <%= submit_tag "Update Director" %>
  </div>

<% end %>
