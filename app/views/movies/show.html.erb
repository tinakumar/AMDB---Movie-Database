<h1>Movie #<%= @movie.id %></h1>

<p>
  <b>Title:</b>
  <%= @movie.title %>
</p>

<p>
  <b>Year:</b>
  <%= @movie.year %>
</p>

<p>
  <b>Director:</b>
  <%= @movie.director.name %>
</p>

<p>
  <b>Cast:</b>
  <ul>
    <% @movie.roles.each do |role| %>
      <li><%= role.actor.name %></li>
    <% end %>
  </ul>
</p>

<% if signed_in? %>
  <p>
    <b>Voters (<%= @movie.votes.count %>):</b>
    </ul>
      <% @movie.users.each do |user| %>
        <li><%= user.username %></li>
      <% end %>
    </ul>
  </p>
<% end %>

