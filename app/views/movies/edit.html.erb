<h1>Editing Movie #<%= @movie.id %></h1>

<% if @movie.errors.any? %>
  <ul>
    <% @movie.errors.full_messages.each do |msg| %>
      <li><%= msg %></li>
    <% end %>
  </ul>
<% end %>

<%= form_tag(movie_url(@movie), method: 'put') do %>

  <div>
    <%= label_tag :title %><br />
    <%= text_field_tag :title, @movie.title %>
  </div>

  <div>
    <%= label_tag :year %><br />
    <%= number_field_tag :year, @movie.year %>
  </div>

  <div>
    <%= label_tag :director_id %><br />
    <%= number_field_tag :director_id, @movie.director_id %>
  </div>


  <div>
    <%= submit_tag "Update Movie" %>
  </div>

<% end %>
